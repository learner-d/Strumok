<Window x:Class="StrumokApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StrumokApp"
        xmlns:vm="clr-namespace:StrumokApp.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainVm/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.ColumnSpan="4" Source="/Img/Ukraine-coat_of_arms-128.png"/>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="4" Text="ДСТУ 8845:2019" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TabControl Grid.Row="2" Grid.ColumnSpan="4">
            <TabItem Header="Текст">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="12*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Текст" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Label Grid.Row="0" Grid.Column="1" Content="Шифротекст" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Text}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CryptedText}" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Файл">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Файл"/>
                    <TextBox Grid.Row="1" IsReadOnly="True" Text="{Binding SourceFilePath}"/>
                    <Button Grid.Column="1" Grid.Row="1" Content="..." Command="{Binding SelectFileCommand}"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Grid.Row="3" Grid.Column="0" Content="Ключ" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
        <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" IsReadOnly="True" Text="{Binding EncryptionKeyStr, Mode=OneWay}"/>
        <Button Grid.Row="3" Grid.Column="3" Content="Шифрувати" Command="{Binding CryptCommand}"/>
    </Grid>
</Window>
